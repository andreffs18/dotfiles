# clear screen
alias c="clear"
# search and look information in directori
alias list="ls"
alias ls="list -lhFAG"
# ip information
alias ip='echo "Your IP IS:"; ifconfig | grep "inet " | grep -v 127.0.0.1'
# reload every dotfile
alias resource='echo "Source ~/.zshrc"; source ~/.zshrc; echo "Success!";'
# project root folder localtion
alias desktop="c && cd ~/Desktop/"
alias documents="c && cd ~/Documents/"
alias projects="c && ~/MEGA/projects/"
alias work="c && ~/work/"
# clear all .pyc files from current directory
alias delpyc="find . -name '*.pyc' -delete"
# remove all runnning processes for given name
function _killps(){ 
    ps -ef | grep $1 | grep -v grep | awk '{print $2}' | xargs kill -9; 
}
alias killps='_killps'
# show disk space 
alias space="sudo du -hd 1 $1"

# update dotfiles
alias updotfiles='function _updotfiles(){
    dotfiledir=~/MEGA/projects/dotfiles/
    # copy files to dotfile folder and commit code
    cp ~/.{mybashrc,gitignore,gitconfig,mansettings,myalias,promptsettings,zshrc,config/flake8} $dotfiledir
    # update github
    cd $dotfiledir
    gitcp "Update .dotfiles!"
};_updotfiles'

# grep string on given folder
alias findstr='function _findstr(){
    find $1 \( -name node_modules -prune \) -o -name "*.py" -exec grep --color -Hn "$2" {} 2>/dev/null \;
};_findstr'

# gifify a movie
alias gifthis='function _gifthis(){
    gifify $1 -o $1.gif --compress 0 --colors 50 --speed 1.05 --fps 15
};_gifthis'

